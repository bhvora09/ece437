`ifndef IFETCH_IDECODE_IF_VH
`define IFETCH_IDECODE_IF_VH

// all types
`include "cpu_types_pkg.vh"

interface ifetch_idecode_if;
    // import types
    import cpu_types_pkg::*;

    //in
    word_t instrIn;
    word_t pc, nxt_pc_in;
    logic lui_s_in;

    //out
    word_t instOut;
    word_t nxt_pc_out;
    logic [25:0] jump_instr;
    logic [4:0] rs, rt, rd;
    logic [15:0] imm_addr;
    logic lui_s_out;

    
    modport idie (
        input instIn, pc, nxt_pc_in, lui_s_in,
        output instOut, nxt_pc_out, jump_instr, rs, rt, rd, imm_addr, lui_s_out
    );

    modport tb (
        input instOut, nxt_pc_out, jump_instr, rs, rt, rd, imm_addr, lui_s_out,
        output instIn, pc, nxt_pc_in, lui_s_in
    );
endinterface

`endif //IFETCH_IDECODE_IF_VH
